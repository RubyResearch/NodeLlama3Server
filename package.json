{
  "name": "@easy-starters/create-express-ts-starter",
  "version": "1.0.6",
  "description": "starter boilerplate with Typescript + Express + Mongoose + MongoDB + Pino + Jest",
  "bin": "./bin/script.js",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx ./src/server.ts | npx tsx pino-pretty",
    "start": "tsx ./src/server.ts",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "debug-test": "jest --runInBand --detectOpenHandles",
    "debug-test-coverage": "jest --runInBand --detectOpenHandles --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "build": "tsc -p .",
    "prettier-watch": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "prettier:fix": "prettier --write src/**/*.ts",
    "prepare": "husky"
  },
  "author": "Wubshet Zeleke",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "node-llama-cpp": "^2.8.12",
    "pino": "^8.19.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "onchange": "^7.1.0",
    "pino-pretty": "^11.0.0",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.16.2",
    "typescript": "^5.4.3"
  }
}
